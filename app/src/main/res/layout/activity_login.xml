<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:paddingBottom="@dimen/spacing_medium_32"
    android:paddingLeft="@dimen/spacing_medium_32"
    android:paddingRight="@dimen/spacing_medium_32"
    tools:context="com.softdesign.devintensive.ui.activities.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_medial_24"
        android:paddingTop="@dimen/spacing_medial_24"
        android:layout_marginLeft="@dimen/spacing_medial_24"
        android:layout_marginRight="@dimen/spacing_medial_24"
        android:elevation="@dimen/spacing_normal_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/split"
                android:layout_width="5dp"
                android:layout_height="@dimen/spacing_medial_24"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/split"
                android:layout_marginLeft="@dimen/spacing_medial_24"
                android:layout_marginRight="@dimen/spacing_medial_24"
                android:text="@string/login"
                android:textColor="@color/red"
                android:textSize="16sp"/>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medial_24"
            android:layout_marginRight="@dimen/spacing_medial_24"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:hint="@string/email_hint"
            android:fontFamily="sans-serif"
            android:textColorHint="@color/gray_light">

            <EditText
                android:id="@+id/login_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:fontFamily="sans-serif">
                <requestFocus/>
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medial_24"
            android:layout_marginRight="@dimen/spacing_medial_24"
            android:hint="@string/password_hint"
            android:fontFamily="sans-serif"
            android:textColorHint="@color/gray_light">

            <EditText
                android:id="@+id/login_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:background="@color/red"
            android:text="@string/login"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/gray_light"/>
    </LinearLayout>

</RelativeLayout>