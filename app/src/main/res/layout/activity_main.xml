<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activities.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medial_24"
            android:paddingTop="@dimen/spacing_medial_24">

            <LinearLayout
                style="@style/TopToolbarStyle">
                <TextView
                    style="@style/TopToolbarTextViewStyle"
                    android:fontFamily="sans-serif-condensed"
                    android:text="5"/>
                <TextView
                    style="@style/TopToolbarTextViewStyle"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Рейтинг"/>
            </LinearLayout>
            
            <View
                style="@style/VerticalLinesStyle"/>

            <LinearLayout
                style="@style/TopToolbarStyle"
                android:layout_weight="2">
                <TextView
                    style="@style/TopToolbarTextViewStyle"
                    android:fontFamily="sans-serif-condensed"
                    android:text="5"/>
                <TextView
                    style="@style/TopToolbarTextViewStyle"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Написано строк кода"/>
            </LinearLayout>

            <View
                style="@style/VerticalLinesStyle"/>

            <LinearLayout
                style="@style/TopToolbarStyle">
                <TextView
                    style="@style/TopToolbarTextViewStyle"
                    android:fontFamily="sans-serif-condensed"
                    android:text="5"/>
                <TextView
                    style="@style/TopToolbarTextViewStyle"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Проектов"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.left"
                android:src="@drawable/ic_call_black_24dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/phone_et"
                        style="@style/EditTextStartStyle"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="phone"
                        android:text="01234567890"
                        android:hint="@string/mobile_number"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/gray_light"
            android:layout_marginLeft="72dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.left"
                android:src="@drawable/ic_email_black_24dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/email_et"
                        style="@style/EditTextStartStyle"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="textEmailAddress"
                        android:text="abc@def.com"
                        android:hint="@string/e_mail"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.right"
                android:src="@drawable/ic_send_black_24dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/gray_light"
            android:layout_marginLeft="72dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.left"
                android:src="@drawable/ic_vk"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/vk_et"
                        style="@style/EditTextStartStyle"
                        android:fontFamily="sans-serif-condensed"
                        android:text="vk.com/id0123456"
                        android:hint="@string/vk_profile"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/gray_light"
            android:layout_marginLeft="72dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.left"
                android:src="@drawable/ic_github_circle"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/github_et"
                        style="@style/EditTextStartStyle"
                        android:fontFamily="sans-serif-condensed"
                        android:text="github.com/user/DevIntensie"
                        android:hint="@string/repo"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/gray_light"
            android:layout_marginLeft="72dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/picture"
                style="@style/Icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/about_et"
                        style="@style/EditTextStartStyle"
                        android:scrollHorizontally="false"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/lorem_ipsum"
                        android:hint="@string/about"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>