<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_72">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_larger_72"
        android:layout_centerVertical="true">

    <EditText
        android:id="@+id/github_et"
        style="@style/EditTextStartStyle"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/repo"
        android:text="github.com/user/DevIntensie"/>
    </android.support.design.widget.TextInputLayout>
    <ImageView
        style="@style/Icon.right"
        android:src="@drawable/ic_remove_red_eye_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>